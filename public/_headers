# Cache headers for static assets
# This file is used by Cloudflare Pages and Netlify
# For GitHub Pages, use the service worker (sw.js) instead

# Images - cache for 1 year
/images/*
  Cache-Control: public, max-age=31536000, immutable

# CSS and JS from Astro build - cache for 1 year
# Note: assets directory is configured in astro.config.mjs
/_astro/*
  Cache-Control: public, max-age=31536000, immutable
/_assets/*
  Cache-Control: public, max-age=31536000, immutable

# Fonts - cache for 1 year
/*.woff
  Cache-Control: public, max-age=31536000, immutable
/*.woff2
  Cache-Control: public, max-age=31536000, immutable
/*.ttf
  Cache-Control: public, max-age=31536000, immutable

# Favicon - cache for 1 year
/favicon.svg
  Cache-Control: public, max-age=31536000, immutable

# HTML pages - cache for 1 hour (shorter for content updates)
/*
  Cache-Control: public, max-age=3600, must-revalidate
