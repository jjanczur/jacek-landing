<script is:inline>
  // Simple theme toggle
  function toggleTheme() {
    const d = document.documentElement;
    const current = d.dataset.theme || 'light';
    const next = current === 'dark' ? 'light' : 'dark';
    d.dataset.theme = next;
    try {
      localStorage.setItem('theme', next);
    } catch {
      // localStorage not available
    }
  }

  // Mobile menu toggle
  function toggleMobileMenu() {
    const menu = document.getElementById('mobile-menu');
    const button = document.getElementById('mobile-menu-button');
    if (!menu || !button) return;

    const body = document.body;
    const isOpen = menu.classList.contains('open');

    if (isOpen) {
      menu.classList.remove('open');
      button.setAttribute('aria-expanded', 'false');
      body.style.overflow = '';
    } else {
      menu.classList.add('open');
      button.setAttribute('aria-expanded', 'true');
      body.style.overflow = 'hidden';
    }
  }

  // Close mobile menu when clicking outside
  function closeMobileMenuOnClickOutside(event) {
    const menu = document.getElementById('mobile-menu');
    const button = document.getElementById('mobile-menu-button');
    if (!menu || !button) return;

    const body = document.body;

    if (!menu.contains(event.target) && !button.contains(event.target)) {
      menu.classList.remove('open');
      button.setAttribute('aria-expanded', 'false');
      body.style.overflow = '';
    }
  }

  // Close mobile menu on escape key
  function closeMobileMenuOnEscape(event) {
    if (event.key === 'Escape') {
      const menu = document.getElementById('mobile-menu');
      const button = document.getElementById('mobile-menu-button');
      if (!menu || !button) return;

      const body = document.body;
      menu.classList.remove('open');
      button.setAttribute('aria-expanded', 'false');
      body.style.overflow = '';
      button.focus();
    }
  }

  // Make functions globally available
  window.toggleTheme = toggleTheme;
  window.toggleMobileMenu = toggleMobileMenu;

  // Initialize event listeners when DOM is loaded
  function initMobileMenu() {
    const button = document.getElementById('mobile-menu-button');
    if (!button) return;

    // Handle both click and touch events for better mobile support
    function handleMenuToggle(e) {
      e.preventDefault();
      e.stopPropagation();
      toggleMobileMenu();
    }

    // Add click event listener directly to button
    button.addEventListener('click', handleMenuToggle);

    // Add touch event listener for better mobile support
    button.addEventListener('touchend', function (e) {
      e.preventDefault();
      e.stopPropagation();
      toggleMobileMenu();
    });

    // Add click listeners to mobile menu links to close menu
    const mobileLinks = document.querySelectorAll(
      '.mobile-nav-link, .mobile-cta',
    );
    mobileLinks.forEach(link => {
      link.addEventListener('click', function () {
        toggleMobileMenu();
      });
    });

    // Add click listener to mobile theme toggle button
    const mobileThemeToggle = document.querySelector('.mobile-theme-toggle');
    if (mobileThemeToggle) {
      mobileThemeToggle.addEventListener('click', function () {
        toggleTheme();
        toggleMobileMenu();
      });
    }

    // Add click listener to desktop theme toggle button
    const desktopThemeToggle = document.querySelector('.theme-toggle');
    if (desktopThemeToggle) {
      desktopThemeToggle.addEventListener('click', function () {
        toggleTheme();
      });
    }

    // Close menu when clicking outside
    document.addEventListener('click', closeMobileMenuOnClickOutside);

    // Close menu on escape key
    document.addEventListener('keydown', closeMobileMenuOnEscape);
  }

  // Initialize when DOM is ready
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', initMobileMenu);
  } else {
    // DOM already loaded
    initMobileMenu();
  }
</script>

