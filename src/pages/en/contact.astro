---
import BaseLayout from '../../layouts/BaseLayout.astro';

const title = 'Contact | Jacek Janczura';
const description =
  'Get in touch for AI architecture reviews, advisory, and delivery engagements. Available for enterprise AI platform design and technical leadership.';
const lang = 'en';
---

<BaseLayout title={title} description={description} lang={lang}>
  <section class="contact-hero">
    <div class="container">
      <h1>Contact</h1>
      <p class="contact-subtitle">Let's build responsibly-engineered AI</p>
    </div>
  </section>

  <section class="contact-content">
    <div class="container content">
      <div class="contact-intro">
        <p>
          Best via the contact form below or LinkedIn. I'm open to advisory,
          architecture reviews, and select delivery engagements focused on
          enterprise AI platforms.
        </p>
      </div>

      <div class="contact-methods">
        <div class="contact-method">
          <h2>Contact Form</h2>
          <p>
            For professional inquiries, project discussions, and collaboration
            opportunities.
          </p>
          <form
            action="https://formspree.io/f/myzngpqa"
            method="POST"
            class="contact-form"
          >
            <label class="form-label">
              Your email:
              <input type="email" name="email" class="form-input" required />
            </label>
            <label class="form-label">
              Your message:
              <textarea name="message" class="form-textarea" rows="4" required
              ></textarea>
            </label>
            <button type="submit" class="form-submit">Send Message</button>
          </form>
        </div>

        <div class="contact-method">
          <h2>LinkedIn</h2>
          <p>
            For networking, industry discussions, and professional connections.
          </p>
          <a
            href="https://linkedin.com/in/jacekjanczura"
            target="_blank"
            rel="noopener noreferrer"
            class="contact-link"
          >
            linkedin.com/in/jacekjanczura
          </a>
        </div>

        <div class="contact-method">
          <h2>GitHub</h2>
          <p>
            For open source contributions, code reviews, and technical
            discussions.
          </p>
          <a
            href="https://github.com/jjanczur"
            target="_blank"
            rel="noopener noreferrer"
            class="contact-link"
          >
            github.com/jjanczur
          </a>
        </div>
      </div>

      <div class="contact-focus">
        <h2>Focus Areas</h2>
        <div class="focus-grid">
          <div class="focus-item">
            <h3>AI Platform Architecture</h3>
            <p>
              Multi-tenant LLM platforms, RAG systems, and AI pipeline design
            </p>
          </div>
          <div class="focus-item">
            <h3>Technical Leadership</h3>
            <p>
              Team building, code review culture, and delivery process
              optimization
            </p>
          </div>
          <div class="focus-item">
            <h3>Security & Compliance</h3>
            <p>
              ISO 27001/SOC 2 implementation and AI-specific risk assessment
            </p>
          </div>
          <div class="focus-item">
            <h3>System Design</h3>
            <p>
              Event-driven microservices, distributed systems, and performance
              optimization
            </p>
          </div>
        </div>
      </div>

      <div class="contact-cta">
        <p>
          I work with organizations building enterprise AI solutions that
          require robust architecture, security-first design, and scalable
          implementation.
        </p>
        <p>
          Currently focusing on LLM platform development, prompt engineering at
          scale, and AI governance frameworks.
        </p>
      </div>
    </div>
  </section>
</BaseLayout>

<style>
  .contact-hero {
    padding: var(--space-8) 0;
    background: linear-gradient(135deg, var(--bg) 0%, var(--muted) 100%);
    text-align: center;
  }

  .contact-hero h1 {
    font-size: var(--font-size-hero);
    margin-bottom: var(--space-3);
    color: var(--text);
  }

  .contact-subtitle {
    font-size: var(--font-size-xl);
    color: var(--primary);
    margin-bottom: 0;
    font-weight: var(--font-weight-normal);
    max-width: var(--content-width);
    margin-left: auto;
    margin-right: auto;
  }

  .contact-content {
    padding: var(--space-8) 0;
    background: var(--bg);
  }

  .contact-intro {
    text-align: center;
    margin-bottom: var(--space-8);
  }

  .contact-intro p {
    font-size: var(--font-size-lg);
    line-height: 1.6;
    margin-bottom: 0;
  }

  .contact-methods {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: var(--space-6);
    margin-bottom: var(--space-8);
  }

  .contact-method {
    padding: var(--space-5);
    border: 1px solid var(--border);
    border-radius: var(--radius-l);
    transition: border-color 0.2s;
  }

  .contact-method:hover {
    border-color: var(--primary);
  }

  .contact-method h2 {
    font-size: var(--font-size-xl);
    color: var(--primary);
    margin-bottom: var(--space-3);
  }

  .contact-method p {
    margin-bottom: var(--space-3);
    color: var(--text);
    opacity: 0.8;
  }

  .contact-link {
    color: var(--primary);
    text-decoration: none;
    font-weight: var(--font-weight-bold);
    font-size: var(--font-size-lg);
    display: inline-block;
    transition: color 0.2s;
  }

  .contact-link:hover {
    color: var(--accent);
    text-decoration: none;
  }

  .contact-form {
    display: flex;
    flex-direction: column;
    gap: var(--space-3);
  }

  .form-label {
    display: flex;
    flex-direction: column;
    gap: var(--space-1);
    font-size: var(--font-size-sm);
    font-weight: var(--font-weight-bold);
    color: var(--text);
  }

  .form-input,
  .form-textarea {
    padding: var(--space-3);
    border: 1px solid var(--border);
    border-radius: var(--radius-m);
    font-family: var(--font-body);
    font-size: var(--font-size-base);
    background: var(--bg);
    color: var(--text);
    transition: border-color 0.2s;
  }

  .form-input:focus,
  .form-textarea:focus {
    outline: none;
    border-color: var(--primary);
  }

  .form-submit {
    padding: var(--space-3) var(--space-4);
    background: var(--primary);
    color: var(--bg);
    border: none;
    border-radius: var(--radius-m);
    font-family: var(--font-body);
    font-size: var(--font-size-base);
    font-weight: var(--font-weight-bold);
    cursor: pointer;
    transition: background-color 0.2s;
  }

  .form-submit:hover {
    background: var(--accent);
  }

  .contact-focus {
    margin-bottom: var(--space-8);
  }

  .contact-focus h2 {
    text-align: center;
    margin-bottom: var(--space-6);
    color: var(--primary);
  }

  .focus-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: var(--space-4);
  }

  .focus-item {
    text-align: center;
    padding: var(--space-4);
    background: var(--muted);
    border-radius: var(--radius-m);
  }

  .focus-item h3 {
    font-size: var(--font-size-lg);
    color: var(--primary);
    margin-bottom: var(--space-2);
  }

  .focus-item p {
    font-size: var(--font-size-sm);
    margin: 0;
    line-height: 1.5;
  }

  .contact-cta {
    background: var(--muted);
    padding: var(--space-6);
    border-radius: var(--radius-l);
    text-align: center;
  }

  .contact-cta p {
    margin-bottom: var(--space-3);
    font-size: var(--font-size-lg);
    line-height: 1.6;
  }

  .contact-cta p:last-child {
    margin-bottom: 0;
  }

  @media (max-width: 600px) {
    .contact-methods {
      grid-template-columns: 1fr;
    }

    .focus-grid {
      grid-template-columns: 1fr;
    }
  }
</style>
