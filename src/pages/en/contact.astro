---
import BaseLayout from '../../layouts/BaseLayout.astro';
import {
  Mail,
  Linkedin,
  Github,
  Code,
  Users,
  Shield,
  Network,
  Send,
} from 'lucide-astro';

const title = 'Contact | Jacek Janczura';
const description =
  'Get in touch for AI architecture reviews, advisory, and delivery engagements. Available for enterprise AI platform design and technical leadership.';
const lang = 'en';
---

<BaseLayout title={title} description={description} lang={lang}>
  <section class="contact-hero">
    <div class="container">
      <h1>Contact</h1>
      <p class="contact-subtitle">Let's build responsibly-engineered AI</p>
    </div>
  </section>

  <section class="contact-content">
    <div class="container content">
      <div class="contact-intro">
        <p>
          Best via the contact form below or LinkedIn. I'm open to advisory,
          architecture reviews, and select delivery engagements focused on
          enterprise AI platforms.
        </p>
      </div>

      <div class="contact-methods">
        <div class="contact-method">
          <div class="contact-icon">
            <Mail size={32} />
          </div>
          <h2>Contact Form</h2>
          <p>
            For professional inquiries, project discussions, and collaboration
            opportunities.
          </p>
          <form
            action="https://formspree.io/f/myzngpqa"
            method="POST"
            class="contact-form"
          >
            <label class="form-label">
              Your email:
              <input type="email" name="email" class="form-input" required />
            </label>
            <label class="form-label">
              Your message:
              <textarea name="message" class="form-textarea" rows="4" required
              ></textarea>
            </label>
            <button type="submit" class="form-submit">
              <Send size={18} />
              Send Message
            </button>
          </form>
        </div>

        <div class="contact-method">
          <div class="contact-icon">
            <Linkedin size={32} />
          </div>
          <h2>LinkedIn</h2>
          <p>
            For networking, industry discussions, and professional connections.
          </p>
          <a
            href="https://linkedin.com/in/jacekjanczura"
            target="_blank"
            rel="noopener noreferrer"
            class="contact-link"
          >
            linkedin.com/in/jacekjanczura
          </a>
        </div>

        <div class="contact-method">
          <div class="contact-icon">
            <Github size={32} />
          </div>
          <h2>GitHub</h2>
          <p>
            For open source contributions, code reviews, and technical
            discussions.
          </p>
          <a
            href="https://github.com/jjanczur"
            target="_blank"
            rel="noopener noreferrer"
            class="contact-link"
          >
            github.com/jjanczur
          </a>
        </div>
      </div>

      <div class="contact-focus">
        <h2>Focus Areas</h2>
        <div class="focus-grid">
          <div class="focus-item">
            <div class="focus-icon">
              <Code size={24} />
            </div>
            <h3>AI Platform Architecture</h3>
            <p>
              Multi-tenant LLM platforms, RAG systems, and AI pipeline design
            </p>
          </div>
          <div class="focus-item">
            <div class="focus-icon">
              <Users size={24} />
            </div>
            <h3>Technical Leadership</h3>
            <p>
              Team building, code review culture, and delivery process
              optimization
            </p>
          </div>
          <div class="focus-item">
            <div class="focus-icon">
              <Shield size={24} />
            </div>
            <h3>Security & Compliance</h3>
            <p>
              ISO 27001/SOC 2 implementation and AI-specific risk assessment
            </p>
          </div>
          <div class="focus-item">
            <div class="focus-icon">
              <Network size={24} />
            </div>
            <h3>System Design</h3>
            <p>
              Event-driven microservices, distributed systems, and performance
              optimization
            </p>
          </div>
        </div>
      </div>

      <div class="contact-cta">
        <p>
          I work with organizations building enterprise AI solutions that
          require robust architecture, security-first design, and scalable
          implementation.
        </p>
        <p>
          Currently focusing on LLM platform development, prompt engineering at
          scale, and AI governance frameworks.
        </p>
      </div>
    </div>
  </section>
</BaseLayout>

<style>
  .contact-hero {
    padding: var(--space-8) 0;
    background: linear-gradient(
      135deg,
      var(--bg) 0%,
      oklch(from var(--primary) l c h / 0.05) 30%,
      oklch(from var(--accent) l c h / 0.03) 60%,
      var(--muted) 100%
    );
    text-align: center;
    position: relative;
    overflow: hidden;
  }

  .contact-hero::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: radial-gradient(
      ellipse at top right,
      oklch(from var(--primary) l c h / 0.08) 0%,
      transparent 50%
    );
    pointer-events: none;
    z-index: 0;
  }

  .contact-hero .container {
    position: relative;
    z-index: 1;
  }

  .contact-hero h1 {
    font-size: var(--font-size-hero);
    margin-bottom: var(--space-3);
    background: linear-gradient(
      135deg,
      var(--text) 0%,
      var(--primary) 50%,
      var(--text) 100%
    );
    -webkit-background-clip: text;
    background-clip: text;
    -webkit-text-fill-color: transparent;
    background-size: 200% auto;
    animation: gradient-shift 8s ease infinite;
  }

  @keyframes gradient-shift {
    0%,
    100% {
      background-position: 0% center;
    }
    50% {
      background-position: 100% center;
    }
  }

  .contact-subtitle {
    font-size: var(--font-size-xl);
    background: linear-gradient(135deg, var(--primary) 0%, var(--accent) 100%);
    -webkit-background-clip: text;
    background-clip: text;
    -webkit-text-fill-color: transparent;
    margin-bottom: 0;
    font-weight: var(--font-weight-bold);
    max-width: var(--content-width);
    margin-left: auto;
    margin-right: auto;
  }

  .contact-content {
    padding: var(--space-8) 0;
    background: linear-gradient(
      180deg,
      var(--bg) 0%,
      oklch(from var(--muted) l c h / 0.3) 50%,
      var(--bg) 100%
    );
  }

  .contact-intro {
    text-align: center;
    margin-bottom: var(--space-8);
  }

  .contact-intro p {
    font-size: var(--font-size-lg);
    line-height: 1.7;
    margin-bottom: 0;
    max-width: var(--content-width);
    margin-left: auto;
    margin-right: auto;
    color: var(--text);
  }

  .contact-methods {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: var(--space-6);
    margin-bottom: var(--space-8);
  }

  .contact-method {
    background: linear-gradient(
      135deg,
      var(--bg) 0%,
      oklch(from var(--primary) l c h / 0.02) 100%
    );
    padding: var(--space-5);
    border: 1px solid transparent;
    border-radius: var(--radius-l);
    transition: all 0.3s ease;
    position: relative;
    overflow: hidden;
  }

  .contact-method::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 4px;
    background: linear-gradient(
      90deg,
      var(--primary),
      var(--accent),
      var(--primary)
    );
    opacity: 0;
    transition: opacity 0.3s ease;
  }

  .contact-method::after {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(
      135deg,
      oklch(from var(--primary) l c h / 0.05) 0%,
      transparent 100%
    );
    opacity: 0;
    transition: opacity 0.3s ease;
    pointer-events: none;
  }

  .contact-method:hover {
    border-color: oklch(from var(--primary) l c h / 0.3);
    box-shadow:
      0 8px 24px oklch(from var(--primary) l c h / 0.15),
      var(--shadow-2);
    transform: translateY(-4px);
    background: linear-gradient(
      135deg,
      var(--bg) 0%,
      oklch(from var(--primary) l c h / 0.05) 100%
    );
  }

  .contact-method:hover::before {
    opacity: 1;
  }

  .contact-method:hover::after {
    opacity: 1;
  }

  .contact-icon {
    margin-bottom: var(--space-3);
    display: flex;
    justify-content: center;
    align-items: center;
    color: var(--primary);
    transition: all 0.3s ease;
  }

  .contact-method:hover .contact-icon {
    transform: scale(1.1) rotate(5deg);
    color: var(--accent);
  }

  .contact-method h2 {
    font-size: var(--font-size-xl);
    background: linear-gradient(135deg, var(--primary) 0%, var(--accent) 100%);
    -webkit-background-clip: text;
    background-clip: text;
    -webkit-text-fill-color: transparent;
    margin-bottom: var(--space-3);
    font-weight: var(--font-weight-bold);
    position: relative;
    z-index: 1;
  }

  .contact-method p {
    margin-bottom: var(--space-3);
    color: var(--text);
    opacity: 0.8;
    position: relative;
    z-index: 1;
  }

  .contact-link {
    color: var(--primary);
    text-decoration: none;
    font-weight: var(--font-weight-bold);
    font-size: var(--font-size-lg);
    display: inline-block;
    padding: var(--space-1) var(--space-2);
    border-radius: var(--radius-s);
    background: linear-gradient(
      135deg,
      oklch(from var(--primary) l c h / 0.1) 0%,
      oklch(from var(--accent) l c h / 0.05) 100%
    );
    border: 1px solid transparent;
    transition: all 0.2s ease;
    position: relative;
    z-index: 1;
  }

  .contact-link:hover {
    background: linear-gradient(135deg, var(--primary) 0%, var(--accent) 100%);
    color: white;
    transform: translateY(-1px);
    box-shadow: 0 2px 8px oklch(from var(--primary) l c h / 0.3);
    text-decoration: none;
  }

  .contact-form {
    display: flex;
    flex-direction: column;
    gap: var(--space-3);
    position: relative;
    z-index: 1;
  }

  .form-label {
    display: flex;
    flex-direction: column;
    gap: var(--space-1);
    font-size: var(--font-size-sm);
    font-weight: var(--font-weight-bold);
    color: var(--text);
  }

  .form-input,
  .form-textarea {
    padding: var(--space-3);
    border: 1px solid var(--border);
    border-radius: var(--radius-m);
    font-family: var(--font-body);
    font-size: var(--font-size-base);
    background: var(--bg);
    color: var(--text);
    transition: all 0.2s ease;
  }

  .form-input:focus,
  .form-textarea:focus {
    outline: 2px solid var(--primary);
    outline-offset: 2px;
    border-color: var(--primary);
    box-shadow: 0 0 0 4px oklch(from var(--primary) l c h / 0.1);
  }

  /* Remove validation styling - keep fields neutral by default */
  /* Fields will only show focus state, not validation states */

  .form-submit {
    padding: var(--space-3) var(--space-4);
    background: linear-gradient(135deg, var(--primary) 0%, var(--accent) 100%);
    color: white;
    border: none;
    border-radius: var(--radius-m);
    font-family: var(--font-body);
    font-size: var(--font-size-base);
    font-weight: var(--font-weight-bold);
    cursor: pointer;
    transition: all 0.3s ease;
    box-shadow: 0 2px 8px oklch(from var(--primary) l c h / 0.2);
    display: inline-flex;
    align-items: center;
    gap: var(--space-2);
  }

  .form-submit:hover {
    transform: translateY(-2px);
    box-shadow: 0 4px 12px oklch(from var(--primary) l c h / 0.3);
    background: linear-gradient(135deg, var(--accent) 0%, var(--primary) 100%);
  }

  .contact-focus {
    margin-bottom: var(--space-8);
  }

  .contact-focus h2 {
    text-align: center;
    margin-bottom: var(--space-6);
    background: linear-gradient(135deg, var(--primary) 0%, var(--accent) 100%);
    -webkit-background-clip: text;
    background-clip: text;
    -webkit-text-fill-color: transparent;
    font-weight: var(--font-weight-bold);
    font-size: var(--font-size-2xl);
  }

  .focus-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: var(--space-5);
  }

  .focus-item {
    text-align: center;
    padding: var(--space-5);
    background: linear-gradient(
      135deg,
      var(--bg) 0%,
      oklch(from var(--primary) l c h / 0.02) 100%
    );
    border: 1px solid transparent;
    border-radius: var(--radius-l);
    transition: all 0.3s ease;
    position: relative;
    overflow: hidden;
  }

  .focus-item::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 3px;
    background: linear-gradient(
      90deg,
      var(--primary),
      var(--accent),
      var(--primary)
    );
    opacity: 0;
    transition: opacity 0.3s ease;
  }

  .focus-item:hover {
    border-color: oklch(from var(--primary) l c h / 0.3);
    box-shadow:
      0 6px 20px oklch(from var(--primary) l c h / 0.12),
      var(--shadow-1);
    transform: translateY(-2px);
    background: linear-gradient(
      135deg,
      var(--bg) 0%,
      oklch(from var(--primary) l c h / 0.04) 100%
    );
  }

  .focus-item:hover::before {
    opacity: 1;
  }

  .focus-icon {
    margin-bottom: var(--space-3);
    display: flex;
    justify-content: center;
    align-items: center;
    color: var(--primary);
    transition: all 0.3s ease;
  }

  .focus-item:hover .focus-icon {
    transform: scale(1.1) rotate(5deg);
    color: var(--accent);
  }

  .focus-item h3 {
    font-size: var(--font-size-lg);
    background: linear-gradient(135deg, var(--primary) 0%, var(--accent) 100%);
    -webkit-background-clip: text;
    background-clip: text;
    -webkit-text-fill-color: transparent;
    margin-bottom: var(--space-2);
    font-weight: var(--font-weight-bold);
  }

  .focus-item p {
    font-size: var(--font-size-sm);
    margin: 0;
    line-height: 1.6;
    color: var(--text);
  }

  .contact-cta {
    background: linear-gradient(
      135deg,
      var(--muted) 0%,
      oklch(from var(--primary) l c h / 0.05) 100%
    );
    padding: var(--space-6);
    border-radius: var(--radius-l);
    text-align: center;
    border: 1px solid transparent;
    position: relative;
    overflow: hidden;
  }

  .contact-cta::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 2px;
    background: linear-gradient(
      90deg,
      transparent,
      var(--primary),
      var(--accent),
      var(--primary),
      transparent
    );
    opacity: 0.5;
  }

  .contact-cta p {
    margin-bottom: var(--space-3);
    font-size: var(--font-size-lg);
    line-height: 1.7;
    color: var(--text);
    position: relative;
    z-index: 1;
  }

  .contact-cta p:last-child {
    margin-bottom: 0;
  }

  @media (max-width: 600px) {
    .contact-methods {
      grid-template-columns: 1fr;
    }

    .focus-grid {
      grid-template-columns: 1fr;
    }
  }
</style>
