---
import BaseLayout from '../../layouts/BaseLayout.astro';

const title = 'Projects | Jacek Janczura';
const description =
  'AI projects showcasing enterprise LLM platforms, RAG systems, and secure cloud architectures. From prompt engineering to platform architecture.';
const lang = 'en';
---

<BaseLayout title={title} description={description} lang={lang}>
  <section class="projects-hero">
    <div class="container">
      <h1>Projects</h1>
      <p class="projects-subtitle">
        From prompt engineering to platform architecture — AI that ships
      </p>
    </div>
  </section>

  <section class="projects-grid">
    <div class="container">
      <!-- entAIngine Project -->
      <article class="project-card">
        <div class="project-header">
          <h2>entAIngine</h2>
          <span class="project-period">2023–Present</span>
        </div>
        <div class="project-role">Co-founder & CTO</div>
        <div class="project-content">
          <div class="project-section">
            <h3>Problem</h3>
            <p>
              Enterprises need controlled, compliant LLM workflows with
              governance and cost controls.
            </p>
          </div>
          <div class="project-section">
            <h3>Approach</h3>
            <p>
              Multi-tenant SaaS with RBAC, content routing, and
              provider-agnostic LLM integration (OpenAI, Azure, Bedrock,
              Mistral).
            </p>
          </div>
          <div class="project-section">
            <h3>Impact</h3>
            <p>
              Faster AI adoption with production-grade reliability and
              enterprise-grade security.
            </p>
          </div>
        </div>
        <div class="project-tags">
          <span class="tag">LLM</span>
          <span class="tag">RAG</span>
          <span class="tag">RBAC</span>
          <span class="tag">SaaS</span>
        </div>
      </article>

      <!-- entAIgent Project -->
      <article class="project-card">
        <div class="project-header">
          <h2>entAIgent</h2>
          <span class="project-period">2023</span>
        </div>
        <div class="project-role">Lead Architect</div>
        <div class="project-content">
          <div class="project-section">
            <h3>Problem</h3>
            <p>
              Non-technical teams struggle to orchestrate multi-step AI agents
              reliably.
            </p>
          </div>
          <div class="project-section">
            <h3>Approach</h3>
            <p>
              Visual builder, team orchestration, tool integrations with
              built-in safeguards and evaluation frameworks.
            </p>
          </div>
          <div class="project-section">
            <h3>Impact</h3>
            <p>
              Weeks to days for agent PoC deployment with consistent outcomes
              across teams.
            </p>
          </div>
        </div>
        <div class="project-tags">
          <span class="tag">AI Agents</span>
          <span class="tag">No-Code</span>
          <span class="tag">Orchestration</span>
          <span class="tag">Evals</span>
        </div>
      </article>

      <!-- FlowHive Project -->
      <article class="project-card">
        <div class="project-header">
          <h2>FlowHive</h2>
          <span class="project-period">2022–2023</span>
        </div>
        <div class="project-role">Senior AI Engineer</div>
        <div class="project-content">
          <div class="project-section">
            <h3>Problem</h3>
            <p>
              Fragmented AI tools increase cost and friction in research
              workflows.
            </p>
          </div>
          <div class="project-section">
            <h3>Approach</h3>
            <p>
              Unified workspace for research, agents, and analysis with seamless
              model switching and caching.
            </p>
          </div>
          <div class="project-section">
            <h3>Impact</h3>
            <p>
              Reduced tool sprawl and per-seat costs with faster iteration
              loops.
            </p>
          </div>
        </div>
        <div class="project-tags">
          <span class="tag">Multi-Model</span>
          <span class="tag">Workspace</span>
          <span class="tag">Caching</span>
          <span class="tag">Research</span>
        </div>
      </article>

      <!-- Valuation Engine Project -->
      <article class="project-card">
        <div class="project-header">
          <h2>Valuation Engine</h2>
          <span class="project-period">2022</span>
        </div>
        <div class="project-role">Technical Lead</div>
        <div class="project-content">
          <div class="project-section">
            <h3>Problem</h3>
            <p>
              Manual local-market research is slow and error-prone for property
              appraisals.
            </p>
          </div>
          <div class="project-section">
            <h3>Approach</h3>
            <p>
              AI-assisted data aggregation and drafting with structured report
              generation.
            </p>
          </div>
          <div class="project-section">
            <h3>Impact</h3>
            <p>
              ~2 hours saved per report with higher consistency and easier
              review cycles.
            </p>
          </div>
        </div>
        <div class="project-tags">
          <span class="tag">Real Estate</span>
          <span class="tag">Copilot</span>
          <span class="tag">Automation</span>
          <span class="tag">Reports</span>
        </div>
      </article>

      <!-- KnowledgeX Project -->
      <article class="project-card">
        <div class="project-header">
          <h2>KnowledgeX</h2>
          <span class="project-period">2021–2022</span>
        </div>
        <div class="project-role">Co-founder & Architect</div>
        <div class="project-content">
          <div class="project-section">
            <h3>Problem</h3>
            <p>
              Cross-organizational analytics without exposing sensitive data.
            </p>
          </div>
          <div class="project-section">
            <h3>Approach</h3>
            <p>
              Blockchain + confidential compute platform with auditable
              workflows.
            </p>
          </div>
          <div class="project-section">
            <h3>Impact</h3>
            <p>
              Safe data collaboration validated with EU stakeholders and
              research partners.
            </p>
          </div>
        </div>
        <div class="project-tags">
          <span class="tag">Blockchain</span>
          <span class="tag">Confidential Compute</span>
          <span class="tag">Analytics</span>
          <span class="tag">Privacy</span>
        </div>
      </article>
    </div>
  </section>
</BaseLayout>

<style>
  .projects-hero {
    padding: var(--space-8) 0;
    background: linear-gradient(135deg, var(--bg) 0%, var(--muted) 100%);
    text-align: center;
  }

  .projects-hero h1 {
    font-size: var(--font-size-hero);
    margin-bottom: var(--space-3);
    color: var(--text);
  }

  .projects-subtitle {
    font-size: var(--font-size-xl);
    color: var(--primary);
    margin-bottom: 0;
    font-weight: var(--font-weight-normal);
    max-width: var(--content-width);
    margin-left: auto;
    margin-right: auto;
  }

  .projects-grid {
    padding: var(--space-8) 0;
    background: var(--bg);
  }

  .project-card {
    background: var(--bg);
    border: 1px solid var(--border);
    border-radius: var(--radius-l);
    padding: var(--space-6);
    margin-bottom: var(--space-6);
    transition:
      border-color 0.2s,
      box-shadow 0.2s;
  }

  .project-card:hover {
    border-color: var(--primary);
    box-shadow: var(--shadow-2);
  }

  .project-header {
    display: flex;
    justify-content: space-between;
    align-items: baseline;
    margin-bottom: var(--space-2);
  }

  .project-header h2 {
    font-size: var(--font-size-2xl);
    color: var(--primary);
    margin: 0;
  }

  .project-period {
    font-size: var(--font-size-sm);
    color: var(--text);
    opacity: 0.7;
  }

  .project-role {
    font-size: var(--font-size-sm);
    color: var(--primary);
    margin-bottom: var(--space-4);
    font-weight: var(--font-weight-bold);
  }

  .project-content {
    margin-bottom: var(--space-4);
  }

  .project-section h3 {
    font-size: var(--font-size-lg);
    color: var(--text);
    margin: var(--space-4) 0 var(--space-2) 0;
    font-weight: var(--font-weight-bold);
  }

  .project-section p {
    margin: 0 0 var(--space-3) 0;
    line-height: 1.6;
  }

  .project-tags {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-2);
  }

  .tag {
    background: var(--muted);
    color: var(--primary);
    padding: var(--space-1) var(--space-3);
    border-radius: var(--radius-s);
    font-size: var(--font-size-xs);
    font-weight: var(--font-weight-bold);
  }

  @media (max-width: 600px) {
    .project-header {
      flex-direction: column;
      gap: var(--space-1);
    }

    .project-header h2 {
      font-size: var(--font-size-xl);
    }
  }
</style>
