---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getTranslations, getSupportedLangs } from '../../utils/i18n';
import type { Lang } from '../../utils/i18n';
import { Mail, Compass, Shield, Wrench, Users } from 'lucide-astro';

export async function getStaticPaths() {
  return getSupportedLangs().map(lang => ({
    params: { lang },
    props: { lang },
  }));
}

interface Props {
  lang: Lang;
}

interface ConsultingEngagement {
  title: string;
  description: string;
  deliverables: string[];
}

interface ConsultingStep {
  title: string;
  description: string;
}

interface ConsultingTranslations {
  meta: {
    title: string;
    description: string;
  };
  hero: {
    title: string;
    subtitle: string;
  };
  intro: {
    p1: string;
    p2: string;
  };
  engagements: {
    title: string;
    items: ConsultingEngagement[];
  };
  howIWork: {
    title: string;
    steps: ConsultingStep[];
  };
  goodFit: {
    title: string;
    items: string[];
  };
  cta: {
    title: string;
    description: string;
    button: string;
  };
}

const { lang } = Astro.props;
const t = await getTranslations<ConsultingTranslations>('consulting', lang);

const engagementIcons = [Compass, Shield, Wrench, Users];

const calendlyUrl =
  'https://calendly.com/jacek-janczura/30min?hide_event_type_details=0&hide_gdpr_banner=1';
---

<BaseLayout title={t.meta.title} description={t.meta.description} lang={lang}>
  <section class="consulting-hero">
    <div class="container">
      <h1>{t.hero.title}</h1>
      <p class="consulting-subtitle">{t.hero.subtitle}</p>
    </div>
  </section>

  <section class="consulting-content">
    <div class="container content">
      <div class="intro">
        <p class="intro-text" set:html={t.intro.p1} />
        <p class="intro-text" set:html={t.intro.p2} />
      </div>

      <div class="section">
        <h2>{t.engagements.title}</h2>
        <div class="cards">
          {
            t.engagements.items.map((item, idx) => {
              const Icon = engagementIcons[idx] || Compass;
              return (
                <article class="card">
                  <div class="card-header">
                    <span class="card-icon">
                      <Icon size={22} />
                    </span>
                    <h3>{item.title}</h3>
                  </div>
                  <p class="card-description">{item.description}</p>
                  <ul class="deliverables">
                    {item.deliverables.map(d => (
                      <li>{d}</li>
                    ))}
                  </ul>
                </article>
              );
            })
          }
        </div>
      </div>

      <div class="section">
        <h2>{t.howIWork.title}</h2>
        <div class="steps">
          {
            t.howIWork.steps.map(step => (
              <div class="step">
                <h3>{step.title}</h3>
                <p>{step.description}</p>
              </div>
            ))
          }
        </div>
      </div>

      <div class="section">
        <h2>{t.goodFit.title}</h2>
        <ul class="goodfit">
          {t.goodFit.items.map(x => <li>{x}</li>)}
        </ul>
      </div>

      <div class="cta">
        <h2>{t.cta.title}</h2>
        <p>{t.cta.description}</p>
        <a
          href={calendlyUrl}
          target="_blank"
          rel="noopener noreferrer"
          class="cta-button"
        >
          <Mail size={18} />
          {t.cta.button}
        </a>
      </div>
    </div>
  </section>
</BaseLayout>

<style>
  .consulting-hero {
    padding: var(--space-8) 0;
    background: linear-gradient(
      135deg,
      var(--bg) 0%,
      oklch(from var(--primary) l c h / 0.05) 30%,
      oklch(from var(--accent) l c h / 0.03) 60%,
      var(--muted) 100%
    );
    text-align: center;
    position: relative;
    overflow: hidden;
  }

  .consulting-hero::before {
    content: '';
    position: absolute;
    inset: 0;
    background: radial-gradient(
      ellipse at top right,
      oklch(from var(--primary) l c h / 0.08) 0%,
      transparent 50%
    );
    pointer-events: none;
    z-index: 0;
  }

  .consulting-hero .container {
    position: relative;
    z-index: 1;
  }

  .consulting-hero h1 {
    font-size: var(--font-size-hero);
    margin-bottom: var(--space-3);
    background: linear-gradient(
      135deg,
      var(--text) 0%,
      var(--primary) 50%,
      var(--text) 100%
    );
    -webkit-background-clip: text;
    background-clip: text;
    -webkit-text-fill-color: transparent;
    background-size: 200% auto;
    animation: gradient-shift 8s ease infinite;
  }

  @keyframes gradient-shift {
    0%,
    100% {
      background-position: 0% center;
    }
    50% {
      background-position: 100% center;
    }
  }

  .consulting-subtitle {
    font-size: var(--font-size-xl);
    background: linear-gradient(135deg, var(--primary) 0%, var(--accent) 100%);
    -webkit-background-clip: text;
    background-clip: text;
    -webkit-text-fill-color: transparent;
    margin-bottom: 0;
    font-weight: var(--font-weight-bold);
    max-width: var(--content-width);
    margin-left: auto;
    margin-right: auto;
  }

  .consulting-content {
    padding: var(--space-8) 0;
    background: linear-gradient(
      180deg,
      var(--bg) 0%,
      oklch(from var(--muted) l c h / 0.3) 50%,
      var(--bg) 100%
    );
  }

  .intro {
    text-align: center;
    max-width: var(--content-width);
    margin: 0 auto var(--space-8) auto;
  }

  .intro-text {
    font-size: var(--font-size-lg);
    line-height: 1.7;
    margin-bottom: var(--space-4);
  }

  .section {
    margin-bottom: var(--space-8);
    padding-bottom: var(--space-6);
    position: relative;
  }

  .section::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    height: 1px;
    background: linear-gradient(90deg, transparent, var(--border), transparent);
  }

  .section:last-of-type::after {
    display: none;
  }

  .section h2 {
    margin-bottom: var(--space-5);
    text-align: center;
    background: linear-gradient(135deg, var(--text) 0%, var(--primary) 100%);
    -webkit-background-clip: text;
    background-clip: text;
    -webkit-text-fill-color: transparent;
    font-weight: var(--font-weight-bold);
  }

  .cards {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: var(--space-6);
  }

  .card {
    background: linear-gradient(
      135deg,
      var(--bg) 0%,
      oklch(from var(--primary) l c h / 0.02) 100%
    );
    border: 1px solid transparent;
    border-radius: var(--radius-l);
    padding: var(--space-5);
    box-shadow: var(--shadow-1);
    transition: all 0.3s ease;
  }

  .card:hover {
    border-color: oklch(from var(--primary) l c h / 0.25);
    transform: translateY(-2px);
    box-shadow: var(--shadow-2);
  }

  .card-header {
    display: flex;
    align-items: center;
    gap: var(--space-2);
    margin-bottom: var(--space-3);
  }

  .card-icon {
    color: var(--primary);
    display: inline-flex;
    align-items: center;
  }

  .card h3 {
    margin: 0;
    font-size: var(--font-size-lg);
    background: linear-gradient(135deg, var(--primary) 0%, var(--accent) 100%);
    -webkit-background-clip: text;
    background-clip: text;
    -webkit-text-fill-color: transparent;
    font-weight: var(--font-weight-bold);
  }

  .card-description {
    margin: 0 0 var(--space-3) 0;
    opacity: 0.85;
    line-height: 1.7;
  }

  .deliverables {
    margin: 0;
    padding-left: 1.1rem;
    display: grid;
    gap: var(--space-2);
    font-size: var(--font-size-sm);
  }

  .steps {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(260px, 1fr));
    gap: var(--space-6);
  }

  .step {
    background: var(--bg);
    border: 1px solid var(--border);
    border-radius: var(--radius-l);
    padding: var(--space-5);
    box-shadow: var(--shadow-1);
  }

  .step h3 {
    margin: 0 0 var(--space-2) 0;
    color: var(--text);
    font-size: var(--font-size-lg);
  }

  .step p {
    margin: 0;
    opacity: 0.85;
    line-height: 1.7;
  }

  .goodfit {
    max-width: var(--content-width);
    margin: 0 auto;
    padding-left: 1.1rem;
    display: grid;
    gap: var(--space-2);
  }

  .cta {
    text-align: center;
    background: linear-gradient(
      135deg,
      var(--muted) 0%,
      oklch(from var(--primary) l c h / 0.03) 50%,
      var(--muted) 100%
    );
    border-radius: var(--radius-l);
    padding: var(--space-6);
    border: 1px solid var(--border);
  }

  .cta p {
    max-width: 720px;
    margin: 0 auto var(--space-5) auto;
    line-height: 1.7;
    font-size: var(--font-size-lg);
  }

  .cta-button {
    background: linear-gradient(135deg, var(--primary) 0%, var(--accent) 100%);
    color: white;
    padding: var(--space-3) var(--space-6);
    border-radius: var(--radius-m);
    text-decoration: none;
    font-weight: var(--font-weight-bold);
    transition: all 0.3s ease;
    box-shadow: 0 4px 12px oklch(from var(--primary) l c h / 0.3);
    display: inline-flex;
    align-items: center;
    gap: var(--space-2);
  }

  .cta-button:hover {
    background: linear-gradient(135deg, var(--accent) 0%, var(--primary) 100%);
    transform: translateY(-2px);
    text-decoration: none;
  }
</style>
