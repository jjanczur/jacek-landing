---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getTranslations, getSupportedLangs } from '../../utils/i18n';
import type { Lang } from '../../utils/i18n';
import {
  Brain,
  Zap,
  Layers,
  BarChart,
  Home,
  Link as LinkIcon,
  ExternalLink,
  Github,
} from 'lucide-astro';

export async function getStaticPaths() {
  return getSupportedLangs().map(lang => ({
    params: { lang },
    props: { lang },
  }));
}

interface Props {
  lang: Lang;
}

const { lang } = Astro.props;
const t = await getTranslations('projects', lang);

const iconMap: Record<string, any> = {
  entAIngine: Brain,
  entAIgent: Zap,
  'Flowhive AI': Layers,
  'Flowhive VC': BarChart,
  'Valuation Engine': Home,
  KnowledgeX: LinkIcon,
  'RP-Matcher': BarChart,
  'Prompt Wizard & Testbed': Zap,
};
---

<BaseLayout title={t.meta.title} description={t.meta.description} lang={lang}>
  <section class="projects-hero">
    <div class="container">
      <h1>{t.hero.title}</h1>
      <p class="projects-subtitle">{t.hero.subtitle}</p>
    </div>
  </section>

  <section class="projects-grid">
    <div class="container">
      <div class="projects-intro">
        <p>
          {t.intro.split('{company}')[0]}
          <strong>{t.company}</strong>
          {t.intro.split('{company}')[1]}
        </p>
      </div>

      {
        t.projects.map(project => {
          const Icon = iconMap[project.name];
          return (
            <article class="project-card">
              <div class="project-header">
                <div class="project-title-group">
                  <h2 class="project-name">
                    <span class="project-icon">
                      {Icon && <Icon size={24} />}
                    </span>
                    {project.name}
                  </h2>
                  <div class="project-meta">
                    <span class="project-period">{project.period}</span>
                    <span class="project-role">{project.role ?? t.role}</span>
                    <span class="project-industry">{project.industry}</span>
                    <span class="project-company">{t.company}</span>
                  </div>
                </div>
              </div>
              <div class="project-content">
                <p class="project-tagline">{project.tagline}</p>
                {project.description.map(para => (
                  <p>{para}</p>
                ))}
              </div>
              <div class="project-details">
                <div class="project-industries">
                  <strong>{t.labels.industries}</strong> {project.industries}
                </div>
                <div class="project-tech">
                  <strong>{t.labels.tech}</strong> {project.tech}
                </div>
                <div class="project-impact">
                  <strong>{t.labels.impact}</strong> {project.impact}
                </div>
              </div>
              {project.links && project.links.length > 0 && (
                <div class="project-links">
                  {project.links.map(link => (
                    <a
                      href={link.url}
                      target="_blank"
                      rel="noopener noreferrer"
                    >
                      {link.type === 'website' && <ExternalLink size={16} />}
                      {link.type === 'repository' && <Github size={16} />}
                      {link.type === 'blog' && <ExternalLink size={16} />}
                      {link.label}
                    </a>
                  ))}
                </div>
              )}
            </article>
          );
        })
      }
    </div>
  </section>
</BaseLayout>

<style>
  .projects-hero {
    padding: var(--space-8) 0;
    background: linear-gradient(
      135deg,
      var(--bg) 0%,
      oklch(from var(--primary) l c h / 0.05) 30%,
      oklch(from var(--accent) l c h / 0.03) 60%,
      var(--muted) 100%
    );
    text-align: center;
    position: relative;
    overflow: hidden;
  }

  .projects-hero::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: radial-gradient(
      ellipse at top right,
      oklch(from var(--primary) l c h / 0.08) 0%,
      transparent 50%
    );
    pointer-events: none;
    z-index: 0;
  }

  .projects-hero .container {
    position: relative;
    z-index: 1;
  }

  .projects-hero h1 {
    font-size: var(--font-size-hero);
    margin-bottom: var(--space-3);
    background: linear-gradient(
      135deg,
      var(--text) 0%,
      var(--primary) 50%,
      var(--text) 100%
    );
    -webkit-background-clip: text;
    background-clip: text;
    -webkit-text-fill-color: transparent;
    background-size: 200% auto;
    animation: gradient-shift 8s ease infinite;
  }

  @keyframes gradient-shift {
    0%,
    100% {
      background-position: 0% center;
    }
    50% {
      background-position: 100% center;
    }
  }

  .projects-subtitle {
    font-size: var(--font-size-xl);
    background: linear-gradient(135deg, var(--primary) 0%, var(--accent) 100%);
    -webkit-background-clip: text;
    background-clip: text;
    -webkit-text-fill-color: transparent;
    margin-bottom: 0;
    font-weight: var(--font-weight-bold);
    max-width: var(--content-width);
    margin-left: auto;
    margin-right: auto;
  }

  .projects-grid {
    padding: var(--space-8) 0;
    background: linear-gradient(
      180deg,
      var(--bg) 0%,
      oklch(from var(--muted) l c h / 0.3) 50%,
      var(--bg) 100%
    );
  }

  .project-card {
    background: linear-gradient(
      135deg,
      var(--bg) 0%,
      oklch(from var(--primary) l c h / 0.02) 100%
    );
    border: 1px solid transparent;
    border-radius: var(--radius-l);
    padding: var(--space-6);
    margin-bottom: var(--space-6);
    transition: all 0.3s ease;
    position: relative;
    overflow: hidden;
  }

  .project-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 4px;
    background: linear-gradient(
      90deg,
      var(--primary),
      var(--accent),
      var(--primary)
    );
    opacity: 0;
    transition: opacity 0.3s ease;
  }

  .project-card::after {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(
      135deg,
      oklch(from var(--primary) l c h / 0.05) 0%,
      transparent 100%
    );
    opacity: 0;
    transition: opacity 0.3s ease;
    pointer-events: none;
  }

  .project-card:hover {
    border-color: oklch(from var(--primary) l c h / 0.3);
    box-shadow:
      0 8px 24px oklch(from var(--primary) l c h / 0.15),
      var(--shadow-2);
    transform: translateY(-4px);
    background: linear-gradient(
      135deg,
      var(--bg) 0%,
      oklch(from var(--primary) l c h / 0.05) 100%
    );
  }

  .project-card:hover::before {
    opacity: 1;
  }

  .project-card:hover::after {
    opacity: 1;
  }

  .project-header {
    margin-bottom: var(--space-4);
  }

  .project-title-group {
    display: flex;
    flex-direction: column;
    gap: var(--space-2);
  }

  .project-name {
    font-size: var(--font-size-2xl);
    background: linear-gradient(135deg, var(--primary) 0%, var(--accent) 100%);
    -webkit-background-clip: text;
    background-clip: text;
    -webkit-text-fill-color: transparent;
    margin: 0;
    font-weight: var(--font-weight-bold);
    line-height: 1.2;
    position: relative;
    z-index: 1;
    display: flex;
    align-items: center;
    gap: var(--space-2);
  }

  .project-icon {
    display: inline-flex;
    align-items: center;
    color: var(--primary);
    transition: all 0.3s ease;
    flex-shrink: 0;
  }

  .project-card:hover .project-icon {
    transform: scale(1.1) rotate(5deg);
    color: var(--accent);
  }

  .project-meta {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-3);
    align-items: center;
  }

  .project-period {
    font-size: var(--font-size-sm);
    color: var(--text);
    opacity: 0.8;
    font-weight: var(--font-weight-normal);
    padding: var(--space-1) var(--space-2);
    background: linear-gradient(
      135deg,
      var(--muted) 0%,
      oklch(from var(--primary) l c h / 0.03) 100%
    );
    border-radius: var(--radius-s);
    border: 1px solid transparent;
  }

  .project-role {
    font-size: var(--font-size-sm);
    color: white;
    font-weight: var(--font-weight-bold);
    padding: var(--space-1) var(--space-2);
    background: linear-gradient(135deg, var(--primary) 0%, var(--accent) 100%);
    border: 1px solid transparent;
    border-radius: var(--radius-s);
    box-shadow: 0 2px 8px oklch(from var(--primary) l c h / 0.3);
  }

  .project-industry {
    font-size: var(--font-size-sm);
    color: var(--text);
    opacity: 0.8;
    font-weight: var(--font-weight-normal);
    padding: var(--space-1) var(--space-2);
    background: linear-gradient(
      135deg,
      var(--muted) 0%,
      oklch(from var(--primary) l c h / 0.05) 100%
    );
    border-radius: var(--radius-s);
    border: 1px solid transparent;
  }

  .project-company {
    font-size: var(--font-size-sm);
    color: var(--text);
    opacity: 0.7;
    font-weight: var(--font-weight-normal);
    padding: var(--space-1) var(--space-2);
    background: linear-gradient(
      135deg,
      var(--muted) 0%,
      oklch(from var(--primary) l c h / 0.03) 100%
    );
    border-radius: var(--radius-s);
    border: 1px solid transparent;
    font-style: italic;
  }

  .projects-intro {
    text-align: center;
    padding: var(--space-4) 0 var(--space-6) 0;
    margin-bottom: var(--space-4);
    border-bottom: 1px solid var(--border);
  }

  .projects-intro p {
    font-size: var(--font-size-base);
    color: var(--text);
    opacity: 0.9;
    margin: 0;
  }

  .projects-intro strong {
    color: var(--primary);
    font-weight: var(--font-weight-bold);
  }

  .project-tagline {
    font-size: var(--font-size-lg);
    background: linear-gradient(135deg, var(--primary) 0%, var(--accent) 100%);
    -webkit-background-clip: text;
    background-clip: text;
    -webkit-text-fill-color: transparent;
    font-weight: var(--font-weight-bold);
    margin-bottom: var(--space-3);
    font-style: italic;
    position: relative;
    z-index: 1;
  }

  .project-content {
    margin-bottom: var(--space-5);
  }

  .project-content p {
    margin: 0;
    line-height: 1.7;
    font-size: var(--font-size-base);
    color: var(--text);
    margin-bottom: var(--space-3);
  }

  .project-content p:last-child {
    margin-bottom: 0;
  }

  .project-details {
    display: flex;
    flex-direction: column;
    gap: var(--space-3);
    margin-bottom: var(--space-4);
    padding-top: var(--space-4);
    border-top: 1px solid var(--border);
    position: relative;
    z-index: 1;
  }

  .project-details::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 1px;
    background: linear-gradient(
      90deg,
      transparent,
      var(--primary),
      var(--accent),
      var(--primary),
      transparent
    );
    opacity: 0.5;
  }

  .project-industries,
  .project-tech,
  .project-impact {
    font-size: var(--font-size-sm);
    line-height: 1.6;
  }

  .project-industries {
    padding-bottom: var(--space-2);
    border-bottom: 1px solid var(--border);
    margin-bottom: var(--space-2);
    position: relative;
  }

  .project-industries::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    height: 1px;
    background: linear-gradient(
      90deg,
      transparent,
      oklch(from var(--primary) l c h / 0.3),
      transparent
    );
  }

  .project-industries strong,
  .project-tech strong,
  .project-impact strong {
    color: var(--primary);
    font-weight: var(--font-weight-bold);
    margin-right: var(--space-2);
  }

  .project-links {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-3);
    padding-top: var(--space-3);
    border-top: 1px solid var(--border);
    position: relative;
    z-index: 1;
  }

  .project-links::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 1px;
    background: linear-gradient(
      90deg,
      transparent,
      var(--primary),
      var(--accent),
      var(--primary),
      transparent
    );
    opacity: 0.5;
  }

  .project-links a {
    display: inline-flex;
    align-items: center;
    gap: var(--space-2);
    color: var(--primary);
    font-weight: var(--font-weight-bold);
    font-size: var(--font-size-sm);
    text-decoration: none;
    padding: var(--space-2) var(--space-3);
    border: 1px solid var(--border);
    border-radius: var(--radius-m);
    transition: all 0.3s ease;
    background: linear-gradient(
      135deg,
      var(--bg) 0%,
      oklch(from var(--primary) l c h / 0.02) 100%
    );
    position: relative;
    overflow: hidden;
  }

  .project-links a::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(
      90deg,
      transparent,
      rgba(255, 255, 255, 0.2),
      transparent
    );
    transition: left 0.5s ease;
  }

  .project-links a:hover {
    background: linear-gradient(135deg, var(--primary) 0%, var(--accent) 100%);
    color: white;
    border-color: var(--primary);
    text-decoration: none;
    transform: translateY(-2px);
    box-shadow: 0 4px 12px oklch(from var(--primary) l c h / 0.3);
  }

  .project-links a:hover::before {
    left: 100%;
  }

  .project-links a:focus-visible {
    outline: 2px solid var(--primary);
    outline-offset: 2px;
  }

  .project-links a svg {
    flex-shrink: 0;
  }

  @media (max-width: 600px) {
    .project-card {
      padding: var(--space-4);
    }

    .project-name {
      font-size: var(--font-size-xl);
    }

    .project-meta {
      flex-direction: column;
      align-items: flex-start;
      gap: var(--space-2);
    }

    .project-details {
      gap: var(--space-2);
    }

    .project-links {
      flex-direction: column;
    }

    .project-links a {
      width: 100%;
      justify-content: center;
    }
  }
</style>
