  // This handles cases where browsers might ignore the download attribute
  // Deferred to avoid blocking initial page load
  function initDownloadLinks() {
    const downloadLinks = document.querySelectorAll('.download-link[download]');

    downloadLinks.forEach(function (link) {
      const anchor = link;
      const downloadFilename = anchor.getAttribute('download');

      if (downloadFilename) {
        // Ensure the download attribute is properly set
        anchor.download = downloadFilename;

        // For additional reliability, handle the click event
        anchor.addEventListener('click', function () {
          // Verify the download attribute is still set
          if (!anchor.download) {
            anchor.download = downloadFilename;
          }
        });
      }
    });
  }

  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', function () {
      if ('requestIdleCallback' in window) {
        requestIdleCallback(initDownloadLinks, { timeout: 1000 });
      } else {
        setTimeout(initDownloadLinks, 100);
      }
    });
  } else {
    if ('requestIdleCallback' in window) {
      requestIdleCallback(initDownloadLinks, { timeout: 1000 });
    } else {
