---
import BaseLayout from '../../layouts/BaseLayout.astro';
import VideoEmbed from '../../components/VideoEmbed.astro';

const title = 'Vorträge | Jacek Janczura';
const description =
  'Technische Vorträge über KI-Architektur, verteilte Systeme und Blockchain. Teilen praktischer Lektionen aus Unternehmensbereitstellungen.';
const lang = 'de';
---

<BaseLayout title={title} description={description} lang={lang}>
  <section class="talks-hero">
    <div class="container">
      <h1>Vorträge</h1>
      <p class="talks-subtitle">
        Praktische Lektionen aus Unternehmensbereitstellungen
      </p>
    </div>
  </section>

  <section class="talks-grid">
    <div class="container">
      <!-- AI Architecture Patterns Talk -->
      <article class="talk-card">
        <div class="talk-header">
          <h2>KI-Architektur-Muster</h2>
          <div class="talk-meta">
            <span class="talk-event">Konferenz</span>
            <span class="talk-date">2024</span>
          </div>
        </div>
        <div class="talk-content">
          <p class="talk-description">
            Praktische Lektionen aus Unternehmens-LLM-Bereitstellungen:
            Multi-Tenant-Architektur, Kostenoptimierung, Observability und
            Governance-Muster, die skalieren.
          </p>
          <VideoEmbed
            youtubeId="Sf61QaWJDjA"
            title="KI-Architektur-Muster - Unternehmens-LLM-Bereitstellungen"
            className="talk-video"
          />
        </div>
        <div class="talk-tags">
          <span class="tag">KI-Architektur</span>
          <span class="tag">LLM</span>
          <span class="tag">Unternehmen</span>
          <span class="tag">Skalierbarkeit</span>
        </div>
      </article>

      <!-- Distributed Systems at Scale Talk -->
      <article class="talk-card">
        <div class="talk-header">
          <h2>Verteilte Systeme in großem Maßstab</h2>
          <div class="talk-meta">
            <span class="talk-event">Tech-Konferenz</span>
            <span class="talk-date">2023</span>
          </div>
        </div>
        <div class="talk-content">
          <p class="talk-description">
            Trade-offs zwischen Durchsatz, Latenz und Resilienz in modernen
            verteilten Systemen. Ereignisgesteuerte Architekturen,
            Back‑Pressure‑Mechanismen und Observability‑Muster.
          </p>
          <VideoEmbed
            youtubeId="fPp66mtx_60"
            title="Verteilte Systeme in großem Maßstab - Architektur‑Muster"
            className="talk-video"
          />
        </div>
        <div class="talk-tags">
          <span class="tag">Verteilte Systeme</span>
          <span class="tag">EventDriven</span>
          <span class="tag">Skalierbarkeit</span>
          <span class="tag">Observability</span>
        </div>
      </article>

      <!-- Blockchain & Bitcoin Talk -->
      <article class="talk-card">
        <div class="talk-header">
          <h2>Blockchain & Bitcoin</h2>
          <div class="talk-meta">
            <span class="talk-event">idealo Tech Talks</span>
            <span class="talk-date">2022</span>
          </div>
        </div>
        <div class="talk-content">
          <p class="talk-description">
            Grundlagen der Blockchain‑Technologie und von Bitcoin, mit
            Enterprise‑Use‑Cases, Smart Contracts und praktischen Anwendungen in
            moderner Softwarearchitektur.
          </p>
          <VideoEmbed
            youtubeId="6WzFtN3xWF4"
            title="Blockchain & Bitcoin - Grundlagen und Enterprise-Anwendungen"
            className="talk-video"
          />
        </div>
        <div class="talk-tags">
          <span class="tag">Blockchain</span>
          <span class="tag">Bitcoin</span>
          <span class="tag">Unternehmen</span>
          <span class="tag">Smart Contracts</span>
        </div>
      </article>
    </div>
  </section>
</BaseLayout>

<style>
  .talks-hero {
    padding: var(--space-8) 0;
    background: linear-gradient(135deg, var(--bg) 0%, var(--muted) 100%);
    text-align: center;
  }

  .talks-hero h1 {
    font-size: var(--font-size-hero);
    margin-bottom: var(--space-3);
    color: var(--text);
  }

  .talks-subtitle {
    font-size: var(--font-size-xl);
    color: var(--primary);
    margin-bottom: 0;
    font-weight: var(--font-weight-normal);
    max-width: var(--content-width);
    margin-left: auto;
    margin-right: auto;
  }

  .talks-grid {
    padding: var(--space-8) 0;
    background: var(--bg);
  }

  .talk-card {
    background: var(--bg);
    border: 1px solid var(--border);
    border-radius: var(--radius-l);
    padding: var(--space-6);
    margin-bottom: var(--space-6);
    transition:
      border-color 0.2s,
      box-shadow 0.2s;
  }

  .talk-card:hover {
    border-color: var(--primary);
    box-shadow: var(--shadow-2);
  }

  .talk-header {
    margin-bottom: var(--space-4);
  }

  .talk-header h2 {
    font-size: var(--font-size-2xl);
    color: var(--primary);
    margin: 0 0 var(--space-2) 0;
  }

  .talk-meta {
    display: flex;
    gap: var(--space-3);
    font-size: var(--font-size-sm);
    color: var(--text);
    opacity: 0.7;
  }

  .talk-content {
    margin-bottom: var(--space-4);
  }

  .talk-description {
    margin: 0 0 var(--space-4) 0;
    line-height: 1.6;
  }

  .talk-video {
    margin-bottom: var(--space-4);
  }

  .talk-tags {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-2);
  }

  .tag {
    background: var(--muted);
    color: var(--primary);
    padding: var(--space-1) var(--space-3);
    border-radius: var(--radius-s);
    font-size: var(--font-size-xs);
    font-weight: var(--font-weight-bold);
  }

  @media (max-width: 600px) {
    .talk-header h2 {
      font-size: var(--font-size-xl);
    }

    .talk-meta {
      flex-direction: column;
      gap: var(--space-1);
    }
  }
</style>
