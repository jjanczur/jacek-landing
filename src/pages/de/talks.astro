---
import BaseLayout from '../../layouts/BaseLayout.astro';
import VideoEmbed from '../../components/VideoEmbed.astro';

const title = 'Vorträge | Jacek Janczura';
const description =
  'Technische Vorträge zu KI‑Architektur, verteilten Systemen und Blockchain. Praktische Erkenntnisse aus Unternehmenseinsätzen.';
const lang = 'de';
---

<BaseLayout title={title} description={description} lang={lang}>
  <section class="talks-hero">
    <div class="container">
      <h1>Vorträge</h1>
      <p class="talks-subtitle">
        Praktische Erkenntnisse aus Unternehmenseinsätzen
      </p>
    </div>
  </section>

  <section class="talks-grid">
    <div class="container">
      <!-- AI Architecture Patterns Talk -->
      <article class="talk-card">
        <div class="talk-header">
          <h2>KI‑Architekturmuster</h2>
          <div class="talk-meta">
            <span class="talk-event">Konferenzvortrag</span>
            <span class="talk-date">2024</span>
          </div>
        </div>
        <div class="talk-content">
          <p class="talk-description">
            Praktische Erkenntnisse aus LLM‑Einsätzen in Unternehmen:
            Multi‑Tenant‑Architektur, Kostenoptimierung, Beobachtbarkeit sowie
            skalierbare Governance‑Muster.
          </p>
          <VideoEmbed
            youtubeId="Sf61QaWJDjA"
            title="KI‑Architekturmuster – LLM‑Einsätze in Unternehmen"
            className="talk-video"
          />
        </div>
        <div class="talk-tags">
          <span class="tag">KI-Architektur</span>
          <span class="tag">LLM</span>
          <span class="tag">Unternehmen</span>
          <span class="tag">Skalierbarkeit</span>
        </div>
      </article>

      <!-- Distributed Systems at Scale Talk -->
      <article class="talk-card">
        <div class="talk-header">
          <h2>Verteilte Systeme im großen Maßstab</h2>
          <div class="talk-meta">
            <span class="talk-event">Tech‑Konferenz</span>
            <span class="talk-date">2023</span>
          </div>
        </div>
        <div class="talk-content">
          <p class="talk-description">
            Abwägungen zwischen Durchsatz, Latenz und Resilienz in modernen
            verteilten Systemen. Ereignisgesteuerte Architekturen,
            Backpressure‑Mechanismen und Muster für Beobachtbarkeit.
          </p>
          <VideoEmbed
            youtubeId="fPp66mtx_60"
            title="Verteilte Systeme im großen Maßstab – Architekturmuster"
            className="talk-video"
          />
        </div>
        <div class="talk-tags">
          <span class="tag">Verteilte Systeme</span>
          <span class="tag">Ereignisgesteuert</span>
          <span class="tag">Skalierbarkeit</span>
          <span class="tag">Beobachtbarkeit</span>
        </div>
      </article>

      <!-- Blockchain & Bitcoin Talk -->
      <article class="talk-card">
        <div class="talk-header">
          <h2>Blockchain & Bitcoin</h2>
          <div class="talk-meta">
            <span class="talk-event">idealo Tech Talks</span>
            <span class="talk-date">2022</span>
          </div>
        </div>
        <div class="talk-content">
          <p class="talk-description">
            Grundlagen der Blockchain‑Technologie und von Bitcoin,
            Anwendungsfälle in Unternehmen, Smart Contracts sowie praktische
            Anwendungen in moderner Softwarearchitektur.
          </p>
          <VideoEmbed
            youtubeId="6WzFtN3xWF4"
            title="Blockchain & Bitcoin – Grundlagen und Anwendungen in Unternehmen"
            className="talk-video"
          />
        </div>
        <div class="talk-tags">
          <span class="tag">Blockchain</span>
          <span class="tag">Bitcoin</span>
          <span class="tag">Unternehmen</span>
          <span class="tag">Smart Contracts</span>
        </div>
      </article>
    </div>
  </section>
</BaseLayout>

<style>
  .talks-hero {
    padding: var(--space-8) 0;
    background: linear-gradient(
      135deg,
      var(--bg) 0%,
      oklch(from var(--primary) l c h / 0.05) 30%,
      oklch(from var(--accent) l c h / 0.03) 60%,
      var(--muted) 100%
    );
    text-align: center;
    position: relative;
    overflow: hidden;
  }

  .talks-hero::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: radial-gradient(
      ellipse at top right,
      oklch(from var(--primary) l c h / 0.08) 0%,
      transparent 50%
    );
    pointer-events: none;
    z-index: 0;
  }

  .talks-hero .container {
    position: relative;
    z-index: 1;
  }

  .talks-hero h1 {
    font-size: var(--font-size-hero);
    margin-bottom: var(--space-3);
    background: linear-gradient(
      135deg,
      var(--text) 0%,
      var(--primary) 50%,
      var(--text) 100%
    );
    -webkit-background-clip: text;
    background-clip: text;
    -webkit-text-fill-color: transparent;
    background-size: 200% auto;
    animation: gradient-shift 8s ease infinite;
  }

  @keyframes gradient-shift {
    0%,
    100% {
      background-position: 0% center;
    }
    50% {
      background-position: 100% center;
    }
  }

  .talks-subtitle {
    font-size: var(--font-size-xl);
    background: linear-gradient(135deg, var(--primary) 0%, var(--accent) 100%);
    -webkit-background-clip: text;
    background-clip: text;
    -webkit-text-fill-color: transparent;
    margin-bottom: 0;
    font-weight: var(--font-weight-bold);
    max-width: var(--content-width);
    margin-left: auto;
    margin-right: auto;
  }

  .talks-grid {
    padding: var(--space-8) 0;
    background: linear-gradient(
      180deg,
      var(--bg) 0%,
      oklch(from var(--muted) l c h / 0.3) 50%,
      var(--bg) 100%
    );
  }

  .talk-card {
    background: linear-gradient(
      135deg,
      var(--bg) 0%,
      oklch(from var(--primary) l c h / 0.02) 100%
    );
    border: 1px solid transparent;
    border-radius: var(--radius-l);
    padding: var(--space-6);
    margin-bottom: var(--space-6);
    transition: all 0.3s ease;
    position: relative;
    overflow: hidden;
  }

  .talk-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 4px;
    background: linear-gradient(
      90deg,
      var(--primary),
      var(--accent),
      var(--primary)
    );
    opacity: 0;
    transition: opacity 0.3s ease;
  }

  .talk-card::after {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(
      135deg,
      oklch(from var(--primary) l c h / 0.05) 0%,
      transparent 100%
    );
    opacity: 0;
    transition: opacity 0.3s ease;
    pointer-events: none;
  }

  .talk-card:hover {
    border-color: oklch(from var(--primary) l c h / 0.3);
    box-shadow:
      0 8px 24px oklch(from var(--primary) l c h / 0.15),
      var(--shadow-2);
    transform: translateY(-4px);
    background: linear-gradient(
      135deg,
      var(--bg) 0%,
      oklch(from var(--primary) l c h / 0.05) 100%
    );
  }

  .talk-card:hover::before {
    opacity: 1;
  }

  .talk-card:hover::after {
    opacity: 1;
  }

  .talk-header {
    margin-bottom: var(--space-4);
    position: relative;
    z-index: 1;
  }

  .talk-header h2 {
    font-size: var(--font-size-2xl);
    background: linear-gradient(135deg, var(--primary) 0%, var(--accent) 100%);
    -webkit-background-clip: text;
    background-clip: text;
    -webkit-text-fill-color: transparent;
    margin: 0 0 var(--space-2) 0;
    font-weight: var(--font-weight-bold);
    line-height: 1.2;
  }

  .talk-meta {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-3);
    align-items: center;
  }

  .talk-event {
    font-size: var(--font-size-sm);
    color: white;
    font-weight: var(--font-weight-bold);
    padding: var(--space-1) var(--space-2);
    background: linear-gradient(135deg, var(--primary) 0%, var(--accent) 100%);
    border: 1px solid transparent;
    border-radius: var(--radius-s);
    box-shadow: 0 2px 8px oklch(from var(--primary) l c h / 0.3);
  }

  .talk-date {
    font-size: var(--font-size-sm);
    color: var(--text);
    opacity: 0.8;
    font-weight: var(--font-weight-normal);
    padding: var(--space-1) var(--space-2);
    background: linear-gradient(
      135deg,
      var(--muted) 0%,
      oklch(from var(--primary) l c h / 0.03) 100%
    );
    border-radius: var(--radius-s);
    border: 1px solid transparent;
  }

  .talk-content {
    margin-bottom: var(--space-4);
    position: relative;
    z-index: 1;
  }

  .talk-description {
    margin: 0 0 var(--space-4) 0;
    line-height: 1.7;
    font-size: var(--font-size-base);
    color: var(--text);
  }

  .talk-video {
    margin-bottom: var(--space-4);
    border-radius: var(--radius-m);
    overflow: hidden;
    box-shadow: 0 4px 12px oklch(from var(--primary) l c h / 0.1);
  }

  .talk-tags {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-2);
    padding-top: var(--space-3);
    border-top: 1px solid var(--border);
    position: relative;
    z-index: 1;
  }

  .talk-tags::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 1px;
    background: linear-gradient(
      90deg,
      transparent,
      var(--primary),
      var(--accent),
      var(--primary),
      transparent
    );
    opacity: 0.5;
  }

  .tag {
    background: linear-gradient(
      135deg,
      var(--muted) 0%,
      oklch(from var(--primary) l c h / 0.1) 100%
    );
    color: var(--primary);
    padding: var(--space-1) var(--space-3);
    border-radius: var(--radius-s);
    font-size: var(--font-size-xs);
    font-weight: var(--font-weight-bold);
    border: 1px solid transparent;
    transition: all 0.2s ease;
  }

  .tag:hover {
    background: linear-gradient(135deg, var(--primary) 0%, var(--accent) 100%);
    color: white;
    transform: translateY(-1px);
    box-shadow: 0 2px 8px oklch(from var(--primary) l c h / 0.3);
  }

  @media (max-width: 600px) {
    .talk-card {
      padding: var(--space-4);
    }

    .talk-header h2 {
      font-size: var(--font-size-xl);
    }

    .talk-meta {
      flex-direction: column;
      align-items: flex-start;
      gap: var(--space-2);
    }
  }
</style>
